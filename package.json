{
  "name": "qrgenerator",
  "version": "1.0.0",
  "description": "QR code generator for Czech payment system",
  "main": "dist/server/server.js",
  "scripts": {
    "build": "npm run build:packages && npm run build:server && npm run build:app",
    "build:packages": "cd packages/qr-platba-generator && npm install && npm run build",
    "build:server": "tsc -p tsconfig.json",
    "build:app": "cd app && vite build",
    "start": "node dist/server/server.js",
    "dev": "ts-node server/server.ts",
    "test:server": "ts-node server/test-server.ts",
    "test": "vitest run",
    "dev:app": "cd app && vite"
  },
  "author": "Vilém Ťulák Jeniš",
  "license": "MIT",
  "dependencies": {
    "ajv": "8.17.1",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "qr-platba-generator": "file:packages/qr-platba-generator",
    "qrcode": "1.5.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.0",
    "@types/qrcode": "1.5.5",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "vite": "^7.0.6",
    "vitest": "3.2.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
